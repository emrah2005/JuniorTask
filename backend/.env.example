# Database Configuration
# MySQL connection details for the booking system

# Database Host
# Default: localhost
# For production: use your MySQL server hostname/IP
DB_HOST=localhost

# Database User
# Default: root
# Use a dedicated database user for production with limited privileges
DB_USER=root

# Database Password
# WARNING: Never commit actual passwords to repository!
# Use strong passwords in production
DB_PASSWORD=

# Database Name
# The database that will be created/used for this application
DB_NAME=booking_saas

# Server Configuration
# Port the Express server will listen on
PORT=5000

# JWT Configuration
# Secret key for signing JWT tokens
# Use a strong, random secret in production
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Token expiration time (e.g., '24h', '7d', '30d')
JWT_EXPIRE=24h

# Environment
# Development, production, or test
NODE_ENV=development

# Frontend URL (for CORS configuration)
REACT_APP_API_BASE_URL=http://localhost:5000

# Database Pool Configuration (optional)
# Maximum number of connections in the pool
DB_POOL_MAX_CONNECTIONS=10

# Connection timeout in milliseconds
DB_POOL_TIMEOUT=30000

# Queue timeout in milliseconds
DB_POOL_QUEUE_TIMEOUT=60000

# Enable detailed logging
DEBUG=false
